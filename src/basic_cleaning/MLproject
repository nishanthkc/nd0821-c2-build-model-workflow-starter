name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: name of the input artifact
        type: string

      output_artifact:
        description: name of the output artifact to be uploaded to W&B
        type: string

      output_type:
        description: type of the output artifact
        type: string

      output_description:
        description: description of artifact
        type: string

      min_price:
        description:  Minimum rental price 
        type: float

      max_price:
        description: Maximum rental price 
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
